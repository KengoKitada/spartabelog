<div class="row">
 <div class="col-lg-12">
    <h1>店舗詳細</h1>
    <dl>
      <dt>店舗名</dt>
      <dd><%= @shop.shop_name %></dd>
      <dt>電話番号</dt>
      <dd><%= @shop.tel %></dd>
      <dt>住所</dt>
      <dd><%= @shop.address %></dd>
      <dt>店舗URL</dt>
      <dd><%= @shop.url %></dd>
    </dl>
<%= link_to 'Edit', edit_shop_path(@shop) %> |
<%= link_to 'Back', shops_path %> |
<%= link_to 'レビューを書く', new_shop_review_path(@shop) %>

<hr>

<h2>レビュー一覧</h2>

<% @shop.reviews.each do |review| %>

<p>
<%= review.user.user_name %>さんのコメント<br>
評価<%= review.score %><br>
 <%= review.body %>


<% end %>

  </div>
</div>
